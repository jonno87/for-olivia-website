---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Contact Â· For Olivia">
  <Header />

  <main class="mx-auto max-w-4xl px-4 py-12">
    <h1 class="text-3xl md:text-4xl font-semibold tracking-tight">Contact</h1>
    <p class="mt-4 text-gray-700 max-w-2xl">
      Send a message about events, sponsorship, or fundraising support.
    </p>

    <div class="mt-10 rounded-2xl border border-black/10 bg-white p-6 shadow-sm">
      <form
        class="grid gap-4 sm:max-w-xl"
        name="contact"
        method="POST"
        data-netlify="true"
      >
        <input type="hidden" name="form-name" value="contact" />

        <label class="grid gap-1 text-sm">
          <span class="text-gray-700">Name</span>
          <input
            class="h-10 rounded-xl border border-black/15 bg-white px-3"
            name="name"
            required
          />
        </label>

        <label class="grid gap-1 text-sm">
          <span class="text-gray-700">Email</span>
          <input
            class="h-10 rounded-xl border border-black/15 bg-white px-3"
            type="email"
            name="email"
            required
          />
        </label>

        <label class="grid gap-1 text-sm">
          <span class="text-gray-700">Message</span>
          <textarea
            class="min-h-[140px] rounded-xl border border-black/15 bg-white px-3 py-2"
            name="message"
            required
          ></textarea>
        </label>

        <button
          class="h-10 w-fit rounded-xl bg-blue-600 px-5 text-sm font-semibold text-white hover:opacity-90"
          type="submit"
        >
          Send message
        </button>

        <p class="text-xs text-gray-600">
          Privacy: we only use your message to respond. No mailing lists unless you ask.
        </p>
      </form>
    </div>
  </main>

  <Footer />
</BaseLayout>
