---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Section from "../components/Section.astro";
---

<BaseLayout title="Contact Â· For Olivia">
  <Header />

  <main class="bg-slate-50">
    <Section
      title="Contact"
      subtitle="Send a message about events, sponsorship, or fundraising support."
      class="pt-16"
    >
      <div class="max-w-xl rounded-2xl border border-black/10 bg-white p-6 shadow-sm">
        <form
          class="grid gap-4"
          name="contact"
          method="POST"
          data-netlify="true"
        >
          <input type="hidden" name="form-name" value="contact" />

          <label class="grid gap-1 text-sm">
            <span class="text-gray-700">Name</span>
            <input
              class="h-11 rounded-xl border border-black/15 bg-white px-3"
              name="name"
              required
            />
          </label>

          <label class="grid gap-1 text-sm">
            <span class="text-gray-700">Email</span>
            <input
              class="h-11 rounded-xl border border-black/15 bg-white px-3"
              type="email"
              name="email"
              required
            />
          </label>

          <label class="grid gap-1 text-sm">
            <span class="text-gray-700">Message</span>
            <textarea
              class="min-h-[140px] rounded-xl border border-black/15 bg-white px-3 py-2"
              name="message"
              required
            ></textarea>
          </label>

          <button
            class="inline-flex h-11 w-fit items-center justify-center rounded-xl bg-blue-600 px-6 text-sm font-semibold text-white shadow-sm hover:opacity-90"
            type="submit"
          >
            Send message
          </button>

          <p class="text-xs text-gray-600">
            Privacy: we only use your message to respond.
          </p>
        </form>
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>
