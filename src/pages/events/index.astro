---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<BaseLayout title="Events · For Olivia">
  <Header />

  <main class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-3xl md:text-4xl font-semibold tracking-tight">Events</h1>
    <p class="mt-4 text-gray-700 max-w-2xl">
      Community events raising awareness and vital funds for families affected by ichthyosis.
    </p>

    <div class="mt-10 grid gap-6 md:grid-cols-2">
      <a
        href="/events/shrewton-charity-match"
        class="block rounded-2xl border border-black/10 bg-white p-6 no-underline hover:shadow-md transition"
      >
        <div class="text-sm text-gray-600">16 May · Shrewton Recreation Ground</div>
        <h2 class="mt-2 text-xl font-semibold">
          Charity Football Match: Jack XI vs Cray XI
        </h2>
        <p class="mt-3 text-gray-700">
          A family-friendly football match raising funds and awareness for ichthyosis support.
        </p>
        <div class="mt-4 font-semibold text-blue-600">
          View event →
        </div>
      </a>
    </div>
  </main>

  <Footer />
</BaseLayout>
