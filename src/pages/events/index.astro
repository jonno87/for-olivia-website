---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Section from "../../components/Section.astro";
---

<BaseLayout title="Events · For Olivia">
  <Header />

  <main class="bg-slate-50">
    <Section
      title="Events"
      subtitle="Community events raising awareness and vital funds for families affected by ichthyosis."
      class="pt-16"
    >
      <div class="grid gap-6 md:grid-cols-2">
        <a
          href="/events/shrewton-charity-match"
          class="block rounded-2xl border border-black/10 bg-white p-6 no-underline shadow-sm hover:shadow-md transition"
        >
          <div class="text-sm text-gray-600">16 May · Shrewton Recreation Ground</div>
          <h2 class="mt-2 text-xl font-semibold text-gray-900">
            Charity Football Match: Jack XI vs Cray XI
          </h2>
          <p class="mt-3 text-gray-700 leading-relaxed">
            A family-friendly football match raising funds and awareness for ichthyosis support.
          </p>
          <div class="mt-4 text-sm font-semibold text-blue-700">
            View event →
          </div>
        </a>
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>
