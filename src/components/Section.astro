---
const {
  title,
  subtitle,
  class: className = "",
} = Astro.props;
---

<section class={`py-12 sm:py-14 ${className}`}>
  <div class="mx-auto max-w-6xl px-4">
    {title && (
      <h2 class="text-2xl md:text-3xl font-semibold tracking-tight text-gray-900">
        {title}
      </h2>
    )}
    {subtitle && (
      <p class="mt-3 max-w-3xl text-gray-700 leading-relaxed">
        {subtitle}
      </p>
    )}
    <div class={title || subtitle ? "mt-8" : ""}>
      <slot />
    </div>
  </div>
</section>
