---
const nav = [
  { href: "/", label: "Home" },
  { href: "/olivias-story", label: "Olivia’s Story" },
  { href: "/about-ichthyosis", label: "About Ichthyosis" },
  { href: "/events", label: "Events" },
  { href: "/updates", label: "Updates" },
  { href: "/sponsors", label: "Sponsors" },
  { href: "/contact", label: "Contact" },
];

const donateUrl =
  "https://www.gofundme.com/f/changing-the-future-for-ichthyosis-for-our-olivia";
---

<header class="sticky top-0 z-40 border-b border-black/10 bg-white/85 backdrop-blur">
  <div class="mx-auto flex max-w-6xl items-center justify-between gap-4 px-4 py-3">
    <a
      href="/"
      class="no-underline font-semibold tracking-tight text-[15px] sm:text-base"
    >
      For Olivia
    </a>

    <nav class="hidden md:flex items-center gap-4 text-sm">
      {nav.map((i) => (
        <a
          href={i.href}
          class="no-underline text-gray-700 hover:text-gray-900 hover:underline underline-offset-4"
        >
          {i.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-2">
      <a
        href={donateUrl}
        class="inline-flex h-10 items-center justify-center rounded-xl bg-blue-600 px-4 text-sm font-semibold text-white no-underline shadow-sm hover:opacity-90"
        rel="noopener"
        target="_blank"
      >
        Donate
      </a>

      <!-- Mobile menu button (shows on mobile only) -->
      <details class="relative md:hidden">
        <summary
          class="list-none inline-flex h-10 w-10 items-center justify-center rounded-xl border border-black/10 bg-white text-gray-900 shadow-sm hover:bg-slate-50"
          aria-label="Open menu"
        >
          ☰
        </summary>

        <div class="absolute right-0 mt-2 w-64 overflow-hidden rounded-2xl border border-black/10 bg-white shadow-lg">
          <div class="p-2">
            {nav.map((i) => (
              <a
                href={i.href}
                class="block rounded-xl px-3 py-2 text-sm font-medium text-gray-800 no-underline hover:bg-slate-50"
              >
                {i.label}
              </a>
            ))}
          </div>
        </div>
      </details>
    </div>

  </div>
</header>
